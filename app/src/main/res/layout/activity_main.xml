<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:crop="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MainActivity"
        android:background="@color/background">
            <RelativeLayout
                android:id="@+id/activity_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <FrameLayout

                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="140dp"
                    android:layout_marginTop="80dp"
                    android:id="@+id/cropframelayout"
                    android:translationZ="8dp"
                    />

                <!--<com.github.ybq.android.spinkit.SpinKitView-->
                <!--xmlns:app="http://schemas.android.com/apk/res-auto"-->
                <!--android:id="@+id/spin_kit"-->
                <!--style="@style/SpinKitView.Large.Circle"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center"-->
                <!--app:SpinKit_Color="@color/colorAccent" />-->


                <TextView
                    android:textStyle="bold"
                    android:id="@+id/titletxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:textAlignment="center"
                    android:textSize="25dp" />

                <Button
                    android:background="@drawable/buttonbackground2"
                    android:id="@+id/camerabtn"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="70dp"
                    android:layout_toLeftOf="@+id/centerdot"
                    android:text="Camera" />

                <Button
                    android:background="@drawable/buttonbackground2"
                    android:id="@+id/gallerybtn"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="70dp"
                    android:layout_toRightOf="@+id/centerdot"
                    android:text="Gallery" />


                <Button
                    android:visibility="gone"
                    android:layout_marginBottom="-20dp"
                    android:background="@drawable/next2"
                    android:layout_alignParentRight="true"
                    android:id="@+id/insertbtn"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:textSize="10dp"
                    android:text="Insert"
                    android:layout_above="@id/detectbtn"/>

                <Button
                    android:visibility="gone"
                    android:background="@drawable/next2"
                    android:layout_alignParentRight="true"
                    android:id="@+id/detectbtn"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_alignParentBottom="true"
                    android:textSize="10dp"
                    android:text="Detect" />

                <ImageView
                    android:translationZ="2dp"
                    android:layout_toRightOf="@id/box_text"
                    android:id="@+id/nextface"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:src="@drawable/next2" />

                <ImageView

                    android:layout_alignParentRight="true"
                    android:translationZ="2dp"
                    android:layout_toRightOf="@id/box_text"
                    android:id="@+id/backface2"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:src="@drawable/next2" />





                <View
                    android:id="@+id/centerdot"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_centerHorizontal="true" />

                <!--<ImageView-->
                <!--android:background="#444444"-->
                <!--android:id="@+id/imageView"-->
                <!--android:layout_marginHorizontal="60dp"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_above="@+id/camerabtn"-->
                <!--android:layout_marginBottom="54dp"-->
                <!--android:layout_centerHorizontal="true" />-->

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="140dp"
                    android:layout_marginTop="40dp" />

                <TextView
                    android:id="@+id/nexttxt"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="next"
                    android:textSize="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/centerdot"
                    android:layout_marginLeft="120dp"
                    android:layout_marginBottom="7dp"/>
                <ImageView
                    android:id="@+id/next"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="90dp"
                    android:layout_toRightOf="@id/centerdot"
                    android:src="@drawable/next2" />
                <TextView
                    android:id="@+id/backtxt"
                    android:visibility="invisible"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="back"
                    android:textSize="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/centerdot"
                    android:layout_marginRight="100dp"
                    android:layout_marginBottom="7dp"/>
                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/back"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="90dp"
                    android:layout_toLeftOf="@id/centerdot"
                    android:src="@drawable/back" />

                <EditText
                    android:layout_marginBottom="40dp"
                    android:id="@+id/nameedittext"
                    android:visibility="gone"
                    android:textAlignment="center"
                    android:hint="Enter name"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content" />





            </RelativeLayout>
    <ListView
        android:visibility="gone"
        android:layout_marginTop="-100dp"
        android:background="#089693"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:id="@+id/listview"
        android:layout_below="@id/activity_main"/>




</RelativeLayout>





